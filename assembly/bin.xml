<assembly>
	<formats>
		<format>zip</format>
	</formats>
	<id>${git-long-version}${target-os-property}${target-bitness-property}</id>
	<fileSets>
		<fileSet>
			<directory>${eclipse-path}</directory>
			<outputDirectory>./</outputDirectory>
			<excludes>
				<exclude>eclipse.ini</exclude>
			</excludes>
		</fileSet>
		<fileSet>
			<directory>${basedir}/target</directory>
			<outputDirectory>./</outputDirectory>
			<includes>
				<include>eclipse.ini</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>../ru.bmstu.rk9.rao/target</directory>
			<outputDirectory>dropins</outputDirectory>
			<includes>
				<include>ru.bmstu.rk9.rao*.jar</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>../ru.bmstu.rk9.rao.lib/target</directory>
			<outputDirectory>dropins</outputDirectory>
			<includes>
				<include>ru.bmstu.rk9.rao.lib*.jar</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>../ru.bmstu.rk9.rao.ui/target</directory>
			<outputDirectory>dropins</outputDirectory>
			<includes>
				<include>ru.bmstu.rk9.rao.ui*.jar</include>
			</includes>
		</fileSet>
	</fileSets>
</assembly>
