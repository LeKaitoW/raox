<assembly>
	<formats>
		<format>zip</format>
	</formats>
	<id>${project.version}${target-os-property}${target-bitness-property}</id>
	<fileSets>
		<fileSet>
			<directory>${eclipse-path}</directory>
			<outputDirectory>./</outputDirectory>
			<excludes>
				<exclude>eclipse.ini</exclude>
			</excludes>
		</fileSet>
		<fileSet>
			<directory>${basedir}/target</directory>
			<outputDirectory>./</outputDirectory>
			<includes>
				<include>eclipse.ini</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${basedir}/target/plugins</directory>
			<outputDirectory>dropins</outputDirectory>
		</fileSet>
	</fileSets>
</assembly>
